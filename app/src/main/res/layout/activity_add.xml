<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".AddActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Thêm Món Ăn Mới"
          android:gravity="center"
          android:textColor="@color/orange"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2">
        <Button
            android:id="@+id/btLuuAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin= "10dp"
            android:background="@color/gray_indi"
            android:text="ĐĂNG TẢI"/>
        <Button
            android:id="@+id/btCancelAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/gray_indi"
            android:layout_weight="1"
            android:text="HỦY"/>
      </LinearLayout>

      <ImageView
          android:id="@+id/imgAdd"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:src="@drawable/thit_bo"/>

      <!--  <Spinner-->
      <!--      android:id="@+id/spAdd"-->
      <!--      android:layout_marginTop="5dp"-->
      <!--      android:background="@color/gray_indi"-->
      <!--      android:layout_width="match_parent"-->
      <!--      android:layout_height="wrap_content"/>-->

      <Button
          android:id="@+id/btChonAnh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Chọn ảnh món ăn"
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          android:background="@drawable/rounded_rectangle"
          android:onClick="chooseImage"></Button>

      <EditText
          android:id="@+id/nameAdd"
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:textSize="20dp"
          android:layout_height="wrap_content"
          android:hint="Nhập tên món ăn của bạn"
          android:padding="10dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:textColor="@color/white"/>

      <EditText
          android:id="@+id/moTaAdd"
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:textSize="20dp"
          android:layout_height="wrap_content"
          android:hint="Mô tả về cảm hứng món ăn của bạn"
          android:padding="10dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:textColor="@color/white"/>

      <EditText
          android:id="@+id/huongDanAdd"
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:padding="10dp"
          android:textSize="20dp"
          android:layout_height="wrap_content"
          android:hint="Đính kèm link video nếu bạn muốn chia sẻ"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:textColor="@color/white"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:weightSum="6">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="Khẩu phần: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/khauPhanAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:padding="10dp"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:hint="Nhập khẩu phần" />
      </LinearLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:weightSum="6">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_weight="3"
            android:text="Thực hiện(phút): "/>
        <EditText
            android:id="@+id/thoiGianNauAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:layout_weight="3"
            android:hint="Nhập thời gian"/>
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Nguyên liệu"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:textColor="@color/white"
          android:textSize="20dp"/>

        <EditText
            android:id="@+id/nguyenLieuAdd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:hint="Rau thit cá"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Cách làm"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:textColor="@color/white"
          android:textSize="20dp"/>

        <EditText
            android:id="@+id/cachLamAdd"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:hint="Cho tất cả vào luộc là xong"/>
    </LinearLayout>

  </ScrollView>




</LinearLayout>