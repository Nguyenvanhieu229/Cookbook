<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:layout_width="0dp"

        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Username:"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle">
                </TextView>
                <EditText
                    android:id="@+id/txtUsernameRes"
                    android:hint="Enter your username"
                    android:layout_height="wrap_content"
                    ></EditText>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Password:"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle">
                </TextView>
                <EditText
                    android:id="@+id/txtPasswordRes"
                    android:hint="Enter your username"
                    android:layout_height="wrap_content"
                    ></EditText>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="CookbookId:"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle">
                </TextView>
                <EditText
                    android:id="@+id/txtCookbookId"
                    android:hint="Enter your tag name"
                    android:layout_height="wrap_content"
                    ></EditText>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Email:"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_rectangle">
                </TextView>
                <EditText
                    android:id="@+id/txtEmailRes"
                    android:hint="Enter your email"
                    android:layout_height="wrap_content"
                    ></EditText>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Chia sẻ:"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/rounded_rectangle">
                </TextView>
                <EditText
                    android:id="@+id/txtChiase"
                    android:hint="Enter your share"
                    android:layout_height="wrap_content"
                    ></EditText>
            </TableRow>
<!--            <TableRow>-->
<!--                <Spinner-->
<!--                    android:layout_gravity="center"-->
<!--                    android:id="@+id/sp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"></Spinner>-->
<!--                <TextView-->
<!--                    android:text="Choose your avatar"-->
<!--                    android:background="@color/gray"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:layout_gravity="center"></TextView>-->
<!--            </TableRow>-->
        </TableLayout>

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img"
            android:scaleType="fitCenter"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/buttonChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:text="Chọn Ảnh"
            android:onClick="chooseImageFromGallery" />

        <Button
            android:id="@+id/btRegister"
            android:layout_marginTop="20dp"
            android:layout_width='150dp'
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Register"
            android:textColor="@color/black"
            android:background="@drawable/rounded_rectangle"
            android:layout_gravity="center"></Button>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>