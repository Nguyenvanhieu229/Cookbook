<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".AddActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Chỉnh sửa"
          android:textColor="@color/orange" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="2">

        <Button
            android:id="@+id/btLuuAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/gray_indi"
            android:text="ĐĂNG TẢI LẠI" />

        <Button
            android:id="@+id/btCancelAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/gray_indi"
            android:text="HỦY" />
      </LinearLayout>

      <ImageView
          android:id="@+id/imgAdd"
          android:layout_width="match_parent"
          android:layout_height="150dp"
          android:src="@drawable/thit_bo" />

      <!--  <Spinner-->
      <!--      android:id="@+id/spAdd"-->
      <!--      android:layout_marginTop="5dp"-->
      <!--      android:background="@color/gray_indi"-->
      <!--      android:layout_width="match_parent"-->
      <!--      android:layout_height="wrap_content"/>-->

      <Button
          android:id="@+id/btChonAnh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:background="@drawable/rounded_rectangle"
          android:onClick="chooseImage"
          android:padding="10dp"
          android:text="Chọn ảnh món ăn"></Button>

      <EditText
          android:id="@+id/nameAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:hint="Nhập tên món ăn của bạn"
          android:padding="10dp"
          android:textColor="@color/white"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/moTaAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:hint="Mô tả về cảm hứng món ăn của bạn"
          android:padding="10dp"
          android:textColor="@color/white"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/huongDanAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:hint="Đính kèm link video nếu bạn muốn chia sẻ"
          android:padding="10dp"
          android:textColor="@color/white"
          android:textSize="20dp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:weightSum="6">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="Khẩu phần: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/khauPhanAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:hint="Nhập khẩu phần"
            android:padding="10dp" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          android:weightSum="6">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:text="Thực hiện: "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/thoiGianNauAdd"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:background="@drawable/rounted_rectangle_gray_indi"
            android:hint="Nhập thời gian"
            android:padding="10dp" />
      </LinearLayout>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:text="Nguyên liệu"
          android:textColor="@color/white"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/nguyenLieuAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:padding="10dp"
          android:text="Rau thit cá"
          android:textColor="@color/black" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="20dp"
          android:text="Cách làm"
          android:textColor="@color/white"
          android:textSize="20dp" />

      <EditText
          android:id="@+id/cachLamAdd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:background="@drawable/rounted_rectangle_gray_indi"
          android:padding="10dp"
          android:text="Cho tất cả vào luộc là xong"
          android:textColor="@color/black" />


    </LinearLayout>
  </ScrollView>

</LinearLayout>